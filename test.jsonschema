{
    "$schema": "http://json-schema.org/draft-07/schema",
    "description": "Object for saving athlete data associated with LabTools",
    "type": "object",
    "name": "Athlete",
    "properties": {
        "ltid": {
            "type": "string"
        },
        "name_given": {
            "type": "string"
        },
        "name_family": {
            "type": "string"
        },
        "email": {
            "type": "string"
        },
        "country_code": {
            "type": "string"
        },
        "phone": {
            "type": "string"
        },
        "street": {
            "type": "string"
        },
        "city": {
            "type": "string"
        },
        "zip": {
            "type": "string"
        },
        "country": {
            "type": "string"
        },
        "birthdate": {
            "type": "string"
        },
        "gender": {
            "type": "string"
        },
        "discipline": {
            "type": "string",
            "enum": ["racing", "mtb-xco", "mtb-dh", "triathlon", "cross", "gravel", "other"]
        },

        "notes": {
            "type": "string"
        },
        
        "tests": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },

        "soos": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "test": {
                        "type": "number"
                    }
                }
            }
        }
    }
}